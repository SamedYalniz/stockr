<% if current_user.customers.any? %>
  <% current_user.customers.each do |customer| %>
    <%= customer.name %>
    <%= customer.email %>
    <%= link_to "Edit #{customer.name}", edit_user_customer_path(current_user, customer)%>
    <%= link_to "Delete #{customer.name}", user_customer_path(current_user, customer), method: :delete %>
  <% end %>
<% end %>


<%= link_to 'Add a customer', new_user_customer_path(current_user) %>
<%= link_to 'Send stock update', send_stock_update_user_customer_path(current_user, 1) %>
